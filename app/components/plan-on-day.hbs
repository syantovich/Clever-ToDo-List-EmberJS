<div>
    {{#each this.infoPlan as |plan|}}
      <div class="wrapper_plans_content " {{on "click" (fn this.openModal plan)}}>
        <div class='{{plan.importance.value}} element_of_plan
           {{if plan.isFinished 'opacity_element'}}'
        >
          <div class="wrapper_checked" {{on "click" (fn this.changeIsFinished plan)}}>
            {{#if plan.isFinished}}
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
              </svg>
            {{else}}
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
              </svg>
            {{/if}}
          </div>

          <div class="wrapper_info" >
            <p class="fw-bold">{{plan.name}}</p>
            <p class="fw-lighter">{{plan.description}}</p>
          </div>

        </div>
      </div>
    {{/each}}
  {{#if this.isModalOpen}}
    <ModalPlan @onClose={{this.closeModal}} @plan={{this.isModalOpen}}/>
  {{/if}}

</div>